<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <CustomLevels>
        <CustomLevel name="REPORT" intLevel="50" />
        <CustomLevel name="ORDER" intLevel="25" />
    </CustomLevels>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd-MM-YYYY HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="activityLog" fileName="log/output.log" bufferedIO="true">
            <PatternLayout pattern="%d{dd-MM-YYYY HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="reportLog" fileName="log/report.log" bufferedIO="true">
            <PatternLayout pattern="%d{dd-MM-YYYY HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="errorLog" fileName="log/error.log" bufferedIO="true">
            <PatternLayout pattern="%d{dd-MM-YYYY HH:mm:ss.SSS} [%t] %-5level %logger{36} -  %msg%n"/>
        </File>
        <File name="orderLog" fileName="log/order.log" bufferedIO="true">
            <PatternLayout pattern="%d{dd-MM-YYYY HH:mm:ss.SSS} [%t] %-5level %logger{36} -  %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="activityLog"/>
            <AppenderRef ref="errorLog" level="error"/>
            <AppenderRef ref="reportLog" level="report"/>
        </Root>

        <Logger name="com.atharva.TradePlatform" level="ORDER" additivity="false">
            <AppenderRef ref="orderLog"/>
        </Logger>


    </Loggers>
</Configuration>